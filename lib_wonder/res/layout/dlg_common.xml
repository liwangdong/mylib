<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_title"
        android:gravity="center_vertical"
        android:visibility="visible" >

        <Button
            android:id="@+id/dlg_bt_titlemap"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="10dp"
             android:visibility="gone"
            android:background="@drawable/dlg_titmap" >
        </Button>

        <TextView
            android:id="@+id/dlg_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="提示信息"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <Button
            android:id="@+id/dlg_bt_close"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_close"
            android:visibility="gone" >
        </Button>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_weight="7"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/dlg_lay_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >
            </LinearLayout>

            <TextView
                android:id="@+id/dlg_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我不是好人，我是2B 不是好人，我是2B 不是好人，我是2B 不是好人，我是2B 不是好人，我是2B 不是好人，我是2B"
                android:textColor="@color/red"
                android:textSize="20sp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

        <LinearLayout
            android:id="@+id/llview"
            android:layout_width="match_parent"
            android:layout_height="0dp"        
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_weight="9"
            android:visibility="gone"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/dlg_laylist_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone" >
            </LinearLayout>

        </LinearLayout>

    
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:gravity="center" >

        <Button
            android:id="@+id/dlg_btcance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:background="@color/transparent"
            android:text="取消"
            android:textColor="@color/lightblue"
            android:textSize="26sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/dlg_btrepet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:background="@color/transparent"
            android:text="狗狗"
            android:textColor="@color/lightblue"
            android:textSize="26sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/dlg_btok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:background="@color/transparent"
            android:text="确定"
            android:textColor="@color/lightblue"
            android:textSize="26sp"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>